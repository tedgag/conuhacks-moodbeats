<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_Chill"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:layout_marginBottom="51dp"
        android:text="@string/Chill"
        app:layout_constraintBottom_toTopOf="@+id/button_Stressed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_Stressed"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Chill" />

    <Button
        android:id="@+id/button_Sad"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:layout_marginBottom="162dp"
        android:text="@string/Sad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Sad" />

    <Button
        android:id="@+id/button_Stressed"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:layout_marginBottom="51dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/button_Sad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_Sad"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Stressed" />

    <Button
        android:id="@+id/button_Happy"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="51dp"
        android:text="@string/Happy"
        app:layout_constraintBottom_toTopOf="@+id/button_Chill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_Chill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Happy" />

</androidx.constraintlayout.widget.ConstraintLayout>